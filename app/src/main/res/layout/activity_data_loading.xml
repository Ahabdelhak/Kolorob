<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/WhiteSmoke"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="3"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:padding="@dimen/defaultpadding"
    android:background="@color/transparent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="220dp"
        android:layout_height="220dp"

        android:background="@drawable/kolorob_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
    <LinearLayout

        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="top|center"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="20dp"
            android:id="@+id/chooseward"
            android:textSize="@dimen/offercounterbtn"
            android:text="1) Choose Ward:"/>
        <View
            android:background="#787878"
            android:layout_width="match_parent"
            android:layout_height="6dp"/>
        <View
            android:background="#FF9800"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>
        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/recycler_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" />
        <View
            android:background="#FF9800"
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>
        <View
            android:background="#787878"
            android:layout_width="match_parent"
            android:layout_height="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choosearea"
            android:layout_gravity="left"
            android:padding="20dp"
            android:textSize="@dimen/offercounterbtn"
            android:text="2) Choose Area:"/>
        <View
            android:background="#787878"
            android:layout_width="match_parent"
            android:layout_height="6dp"/>
        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/recycler_view2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" />
        <View
            android:background="#787878"
            android:layout_width="match_parent"
            android:layout_height="6dp"/>

        <info.hoang8f.widget.FButton

            fbutton:buttonColor="@color/black"
            fbutton:shadowColor="@color/colorPrimaryDark"
            fbutton:shadowEnabled="true"
            android:layout_gravity="center"
            android:paddingTop="@dimen/regsubbtn"
            android:paddingBottom="@dimen/regsubbtn"
            android:paddingRight="@dimen/regsubbtn"
            android:paddingLeft="@dimen/regsubbtn"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="5dp"
            android:id="@+id/submittoserver"
            android:text=" জমা দিয়েছি "
            android:textColor="@color/colorSecondaryText"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/regsubbtnsize"
            android:textSize="@dimen/offercounterbtn"
            android:layout_width="wrap_content" />
    </LinearLayout>
</LinearLayout>