<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:gravity="left|center_vertical"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Phone"
        android:paddingLeft="30dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/phone" />

    <TextView
        android:layout_width="match_parent"
        android:gravity="left|center_vertical"
        android:textColor="@color/black"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Address"
        android:textSize="20sp"
        android:id="@+id/address" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/left_go_process"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:gravity="right|center_vertical">

            <ImageView
                android:id="@+id/distance_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_direction_icon"
                android:backgroundTint="@color/kolorob_color" />






        </LinearLayout>





        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.13"
            android:layout_height="wrap_content"
            android:id="@+id/middle_phone"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/phone_call"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_phone_icon"
                android:backgroundTint="@color/kolorob_color" />





        </LinearLayout>




        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:id="@+id/right_email"

            android:layout_height="wrap_content"
            android:gravity="left|center_vertical">

            <ImageView
                android:id="@+id/right_side_email"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_email_icon"
                android:backgroundTint="@color/kolorob_color" />



        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/kolorob_color" />
</LinearLayout>