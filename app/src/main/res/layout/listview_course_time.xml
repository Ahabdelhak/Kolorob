<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="4dp"
        android:textAppearance="?android:attr/textAppearanceMedium"        android:text="Course Name"
        android:textColor="@color/black"
        android:id="@+id/c_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="4dp"
        android:textAppearance="?android:attr/textAppearanceMedium"        android:text="Course Duration"
        android:textColor="@color/black"

        android:id="@+id/c_duration" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="4dp"
        android:textAppearance="?android:attr/textAppearanceMedium"        android:text="Admission Time"
        android:textColor="@color/black"

        android:id="@+id/c_admissionTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="4dp"
        android:textAppearance="?android:attr/textAppearanceMedium"        android:text="Course Cost"
        android:textColor="@color/black"

        android:id="@+id/c_cost" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="4dp"
        android:textAppearance="?android:attr/textAppearanceMedium"        android:text="Course Type"
        android:textColor="@color/black"

        android:id="@+id/c_type" />


</LinearLayout>
