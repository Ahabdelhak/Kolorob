<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/emergency_row_bg"
	>

	<TextView
		android:text="emergency" android:id="@+id/emergency_name"
		android:textSize="18sp"
		android:textStyle="bold"
		android:textColor="#3A4296"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="5dp"
		android:gravity="center_horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"></TextView>


	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"

		android:layout_below="@+id/emergency_name"

		>


	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="left"


		android:layout_alignParentLeft="true"
		>
		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/distance_btn"
			android:layout_gravity="left"
			android:id="@+id/distance_id"
			/>

		<TextView
			android:text="way" android:id="@+id/title_id"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textColor="#3A4296"

			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></TextView>
	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"

		android:gravity="center_horizontal"

		>
		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/call_btn"
			android:layout_gravity="left"

android:id="@+id/call_id"
			/>

		<TextView
			android:text=" way" android:id="@+id/call_text"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textColor="#3A4296"
			android:layout_below="@+id/distance_id"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></TextView>
	</LinearLayout>


	<RelativeLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="right"
		android:layout_alignParentRight="true"

		>
		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/email_btn"

			android:id="@+id/addr_id"
			/>

		<TextView
			android:text=" way" android:id="@+id/add_text"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textColor="#3A4296"

			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></TextView>
	</RelativeLayout>
</LinearLayout>


</RelativeLayout>





