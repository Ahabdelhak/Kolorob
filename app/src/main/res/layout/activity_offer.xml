<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="3">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:id="@+id/loweroffer"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:gravity="top|center"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="0dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/creditbutton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            fab:fab_icon="@drawable/smile"
            fab:fab_colorNormal="@color/black"
            fab:fab_colorPressed="@color/gray"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/offerpaddingcreditlr"

            android:layout_marginTop="@dimen/offerpaddingcredittop"
            android:layout_marginRight="@dimen/offerpaddingcreditlr"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="@dimen/offerbagw"
                android:layout_height="@dimen/offerbagh"
                android:id="@+id/backpack"
                android:background="@drawable/backpack"
                android:layout_alignParentTop="true"
                android:padding="@dimen/offerpadding"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/offertext"
            android:layout_margin="@dimen/offerpadding"
            android:layout_gravity="center"

            android:text="@string/offer"
            android:textColor="@color/white"
            android:textSize="@dimen/offerbagtext"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:layout_height="0dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/offerpadding"
                android:layout_gravity="center"
                android:gravity="center"

                android:weightSum="1">


                <ImageButton
                    android:id="@+id/btnf"
                    android:layout_width="@dimen/bwidth"
                    android:layout_height="@dimen/bwidth"
                    android:background="@drawable/facebook_icon"
                    android:layout_gravity="center_horizontal"

                    android:layout_marginRight="@dimen/aboutusleftpadding"
                    />




                <ImageButton
                    android:id="@+id/btnw"
                    android:layout_width="@dimen/bwidth"
                    android:layout_height="@dimen/bwidth"
                    android:layout_marginLeft="@dimen/aboutusleftpadding"

                    android:background="@drawable/email_icon"
                    android:layout_gravity="center"

                    android:layout_weight="0.00" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/distext"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#f2f2f2"
                android:textSize="10dp"
                android:text="*আগে কলরব ডাউনলোড করে থাকলে এই অফারটি প্রযোজ্য হবে না" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/distext2"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#f2f2f2"
                android:textSize="10dp"
                android:text="***প্রথম ৪০০ জনের জন্য প্রযোজ্য" />

        </LinearLayout>
       </LinearLayout>
</LinearLayout>
