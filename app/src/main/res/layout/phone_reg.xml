<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context="demo.kolorob.kolorobdemoversion.activity.PhoneRegActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/menu_image_2"
            android:layout_height="wrap_content">

        </LinearLayout>



        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textSize="28dp"
        android:text=" রেজিস্ট্রেশন করুন "
          android:layout_marginBottom="5dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/userid"
        android:layout_marginLeft="20dp"
        android:hint="আপনার নাম লিখুন *"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_horizontal"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/emailid"
        android:layout_marginLeft="20dp"
        android:inputType="textEmailAddress"

        android:hint="ইমেইল আইডি"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_horizontal"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/phone_id"
        android:layout_marginLeft="20dp"
        android:inputType="number"
        android:hint="ফোন নম্বর*"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_horizontal"

        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/submit_btn"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:text="দিয়েছি"
        android:onClick="submit"
        />


</LinearLayout>


</ScrollView>


