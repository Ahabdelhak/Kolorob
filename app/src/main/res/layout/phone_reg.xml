<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_gravity="center_horizontal"
    tools:context="demo.kolorob.kolorobdemoversion.activity.PhoneRegActivity">



        <LinearLayout
            android:layout_width="wrap_content"
            android:background="@drawable/menu_image_2"
            android:layout_height="wrap_content">

        </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"

    android:padding="30dp"
    android:gravity="top|center"
    android:layout_height="match_parent">

        <TextView
            android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:id="@+id/phoneheader"
        android:layout_gravity="center"
            android:text=" রেজিস্ট্রেশন করুন "
            android:textColor="@color/white"

            android:textStyle="bold"
            android:textSize="18sp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:id="@+id/userid"
        android:layout_height="wrap_content"
        app:met_floatingLabel="normal"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="10dp"
        android:hint="Write Username"/>


    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:id="@+id/phone_id"
        android:layout_height="wrap_content"
        app:met_floatingLabel="normal"
        android:hint="Write Phone Number"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:text="দিয়েছি"
        android:onClick="submit"
        />

</LinearLayout>
</LinearLayout>





